<div class='booking-form-container'>
  <%= simple_with(model: user, item, local: true) do |form| %>
    <div class="field">
      <%= form.label :start_date %>
      <%= form.date_select :start_date %>
    </div>

    <div class="field">
      <%= form.label :end_date %>
      <%= form.date_select :end_date %>
    </div>
  <% end %>
</div>
