<div class='booking-form-container'>
  <%= simple_form_for [item, booking] do |form| %>
    <div class="field">
      <%= form.label :start_date %>
      <%= form.date_select :start_date %>
    </div>

    <div class="field">
      <%= form.label :end_date %>
      <%= form.date_select :end_date %>
    </div>

    <%= form.submit %>
  <% end %>
</div>
