<div class="container booking-details">
  <h1>Booking Details</h1>

  <div class="booking-card">
    <ul>
      <li><strong>Item: </strong> <%= @booking.item.title %></li>
      <li><strong>Total price for booking: </strong> £<%= @booking.item.price * (@booking.end_date - @booking.start_date).to_i %></li>
      <li><strong>Start Date: </strong> <%= @booking.start_date.strftime("%B %d, %Y") %></li>
      <li><strong>End Date: </strong> <%= @booking.end_date.strftime("%B %d, %Y") %></li>
      <li><strong>Duration: </strong> <%= (@booking.end_date - @booking.start_date).to_i %> days</li>
    </ul>

    <%= link_to '← Back', :back, class: "btn-back" %>
  </div>

</div>
