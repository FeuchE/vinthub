<div class="listings-container">
  <h1>All Listings</h1>
  <%= link_to 'Add item', new_item_path, class:'btn btn-primary' %>
  <hr>
  <div class="listings-grid">
    <% @items.each do |item| %>
      <%= link_to item_path(item), class: "listing-card" do %>
        <h2><%= item.title %></h2>
        <p><%= truncate(item.description, length: 80) %></p>
      <% end %>
    <% end %>
  </div>
</div>
